{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "lib": ["es2021", "dom", "dom.iterable"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", ".turbo", "coverage", "dist", "src/**/*.test.ts"]
}
